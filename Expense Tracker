    <title>Expense Tracker</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            max-width: 400px;
            margin: 50px auto;
            text-align: center;
            background-color: #f4f4f4;
            color: black;
            transition: background-color 0.3s, color 0.3s;
            background-image: url('abstract-shapes-line-patterned-background_697972-2773.avif');
            background-size: cover;
            background-attachment: fixed;
            background-blend-mode: lighten;
        }
        .container {
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            transition: background 0.3s;
        }
        input, button {
            margin: 10px 0;
            padding: 8px;
            width: 90%;
        }
        button {
            background-color: #5dade2;
            color: white;
            border: none;
            cursor: pointer;
            padding: 10px;
            border-radius: 5px;
        }
        button:hover {
            background-color: #CCE5FF;
        }
        .dark-mode {
            background-color: #121212;
            color: white;
            background-image: url('abstract-shapes-line-patterned-background_697972-2773.avif');
            background-blend-mode: darken;
        }
        .dark-mode .container {
            background: rgba(30, 30, 30, 0.9);
        }
        .dark-mode li {
            background: #333;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        li {
            background: #ddd;
            padding: 10px;
            margin: 5px 0;
            display: flex;
            justify-content: space-between;
        }
        .income { color: green; }
        .expense { color: red; }
    </style>
